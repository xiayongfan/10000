<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiayongfan.dao.mybatis.BookDao">
<!-- 联合出版社进行查询    多对一配置 -->
	<resultMap id="result" type="com.xiayongfan.pojo.Book">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="author" column="author" />
		
		<association property="publish" javaType="com.xiayongfan.pojo.Publish">
			<id property="pubId" column="pub_id"/>	
			<result property="pubName" column="pub_name"/>
		</association>
	</resultMap>

	<select id="findAll" resultMap="result">
		SELECT book.id,book.name,book.author,publish.pub_name
		FROM book,publish
		where book.publishId=publish.pub_id
	</select>
	<insert id="add" parameterType="com.xiayongfan.pojo.Book">
		INSERT INTO book
		(name,author,publishId)
		VALUE (#{name},#{author},#{publish.pubId})
	</insert>
	<delete id="delete" parameterType="int">
		DELETE FROM
		book
		WHERE id = #{id}
	</delete>
	
	
	<select id="findById" parameterType="int" resultMap="result">
		SELECT b.id,b.name,b.author,p.pub_name
		FROM book b,publish p where b.publishId=p.pub_id and id = #{id};
	</select>


	<update id="update" parameterType="com.xiayongfan.pojo.Book">
		UPDATE book
		<set>
			<if test="name != null ">name = #{name},</if>
			<if test="author != null ">author = #{author},</if>
			<if test="publish.pubId != null ">publishId = #{publish.pubId}</if>
		</set>
		WHERE id = #{id}
	</update>
</mapper>
