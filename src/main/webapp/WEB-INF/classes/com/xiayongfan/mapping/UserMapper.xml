<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiayongfan.dao.mybatis.UserDao">

	<resultMap id="result" type="com.xiayongfan.pojo.User">
		<result property="id" column="id" />
		<result property="userName" column="userName" />
		<result property="age" column="age" />
		<result property="sex" column="sex" />
		<result property="address" column="address" />

	</resultMap>

	<insert id="addUser" parameterType="com.xiayongfan.pojo.User">
		INSERT INTO user_table
		(username,age,sex,address)
		VALUE
		(#{userName},#{age},#{sex},#{address})
	</insert>


	<select id="getAllUser" resultMap="result">
		SELECT id, username, age, sex,
		address
		FROM user_table;
	</select>

	<select id="getUserById" parameterType="int" resultMap="result">
		SELECT id, username, age, sex, address
		FROM user_table where id =
		#{id};
	</select>

	<delete id="deleteById" parameterType="int">
		DELETE FROM
		user_table
		WHERE ID = #{id}
	</delete>

	<update id="update" parameterType="com.xiayongfan.pojo.User">
		UPDATE user_table
		<set>
			<if test="userName != null ">userName = #{userName},</if>
			<if test="age >= 0 ">age = #{age},</if>
			<if test="sex == 0 or sex == 5">sex = #{sex},</if>
			<if test="address != null ">address = #{address}</if>
		</set>
		WHERE ID = #{id}
	</update>
	<select id="getAllUserCount" resultType="long">
		SELECT COUNT(*) FROM
		user_table ;
	</select>

	<select id="getUsers" parameterType="com.xiayongfan.pojo.Page" resultMap="result">
		SELECT id,
		username, age, sex, address
		FROM user_table limit #{startPos},
		#{pageSize};
	</select>


</mapper>